 <p id="notice"></p>



   <div class="col-lg-3">
          <h2>User info</h2>
            <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>

             <h2>New book</h2>
          <%= form_with model:Book.new, local:true do |f| %>
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title"%>
          <label for="inputBody">Opinion</label>
          <%= f.text_area :body, autofocus: true, id:"Body", placeholder:"Body"%>
          <%= f.submit "Craate Book" %>
          <% end %>

          <table>
            <thead>
              <tr>
                  <th>Name<%= current_user.name %></th>
                  <th>Email<%= current_user.introduction %></th>

                  </tr>
            </thead>
          <tbody>


         </div>


        <a class="btn btn-outline-secondary btn-block fas fa-user-cog " <%= link_to "", edit_user_path(current_user) %>  </a>
        </div>
      </div>
    </div>
  </div>
